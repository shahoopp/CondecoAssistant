<Page x:Class="CondecoAssistant.Pages.Home.HomePage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:CondecoAssistant"
  Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
            <Button 
                Content="Run" 
                FontSize="40"
                Background="#585958"
                Foreground="White"
                Width="300" 
                Height="100" 
                Click="RunAutomationButton_Click" 
                Margin="0,0,0,20"/>
            <Button 
                Content="Login Info" 
                FontSize="40"
                Background="#585958"
                Foreground="White"
                Width="300" 
                Height="100" 
                Click="LoginButton_Click" />
        </StackPanel>
    </Grid>
</Page>