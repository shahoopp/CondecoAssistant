<Page x:Class="CondecoAssistant.Pages.Home.HomePage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:CondecoAssistant"
  Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
			<TextBlock
    Text="Enter forms link"
    FontSize="20"
    Margin="0,0,0,10"
    HorizontalAlignment="Center" />

			<TextBox
				x:Name="FormsLinkTextBox"
				Width="600"
				Height="30"
				FontSize="16"
				Margin="0,0,0,10"
				TextWrapping="Wrap" />

			<Button
				Content="Save Link"
				FontSize="20"
				Background="#009944"
				Foreground="White"
				Width="150"
				Height="40"
				Click="SaveFormsLinkButton_Click"
				Margin="0,0,0,10" />

			<Button 
                Content="Run Now" 
                FontSize="40"
                Background="#009944"
                Foreground="White"
                Width="300" 
                Height="100" 
                Click="RunAutomationNowButton_Click" 
                Margin="0,0,0,20"/>
			<Button
                Content="Run Later"
                FontSize="40"
                Background="#009944"
                Foreground="White"
                Width="300"
                Height="100"
                Click="RunAutomationLaterButton_Click"
                Margin="0,0,0,20"/>
            <Button 
                Content="Login Info" 
                FontSize="40"
                Background="#009944"
                Foreground="White"
                Width="300" 
                Height="100" 
                Click="LoginButton_Click" />
        </StackPanel>
    </Grid>
</Page>