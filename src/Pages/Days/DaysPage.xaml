<Page x:Class="CondecoAssistant.Pages.Days.DaysPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:CondecoAssistant.Pages.Days"
    Background="White">
   <Grid>
       <Button 
          Content="←" 
          FontSize="20"
          Background="#585958"
          Foreground="White"
          HorizontalAlignment="Left" 
          VerticalAlignment="Top" 
          Margin="10" 
          Width="50" 
          Height="30" 
          Click="BackButton_Click" />

       <StackPanel 
          VerticalAlignment="Center" 
          HorizontalAlignment="Center" 
          Margin="0,40,0,0" 
          Width="300"
          Height="400">
           
           <ToggleButton 
               x:Name="MondayButton"
               Content="Monday"
               FontSize="35"
               Click="DayToggle_Click"
               Margin="10"/>
           <ToggleButton 
               x:Name="TuesdayButton"
               Content="Tuesday"
               FontSize="35"
               Click="DayToggle_Click"
               Margin="10"/>
           <ToggleButton 
               x:Name="WednesdayButton"
               Content="Wednesday"
               FontSize="35"
               Click="DayToggle_Click"
               Margin="10"/>
           <ToggleButton 
               x:Name="ThursdayButton"
               Content="Thursday"
               FontSize="35"
               Click="DayToggle_Click"
               Margin="10"/>
           <ToggleButton 
               x:Name="FridayButton"
               Content="Friday"
               FontSize="35"
               Click="DayToggle_Click"
               Margin="10"/>
       </StackPanel>
   </Grid>
</Page>
