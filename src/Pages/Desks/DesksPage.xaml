<Page x:Class="CondecoAssistant.Pages.Desks.DesksPage"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     xmlns:local="clr-namespace:CondecoAssistant"
     Background="White">
    <Grid Margin="20">
        <Button 
           Content="Back" 
           FontSize="20"
Background="#585958"
Foreground="White"
HorizontalAlignment="Left" 
VerticalAlignment="Top" 
Margin="10" 
Width="75" 
Height="30" 
Click="BackButton_Click" />

        <!-- Selected Desks Section -->
        <WrapPanel 
    x:Name="SelectedDesksPanel"
    Width="500"
    VerticalAlignment="Top"
    HorizontalAlignment="Center"
    Margin="0,60,0,0"
    ItemWidth="125"
    ItemHeight="40">
        </WrapPanel>

        <WrapPanel 
            Width="500"
           VerticalAlignment="Center" 
           HorizontalAlignment="Center" 
           Margin="0,40,0,0" 
           ItemWidth="125"
           ItemHeight="60">

            <ToggleButton 
                x:Name="W100"
                Content="16-W100"
                Click="DeskToggle_Click"
                Margin="10"/>
            <ToggleButton
                x:Name="W101"
                Content="16-W101"
                Click="DeskToggle_Click"
                Margin="10"/>
            <ToggleButton 
                x:Name="W102"
                Content="16-W102"
                Click="DeskToggle_Click"
                Margin="10"/>
            <ToggleButton 
                x:Name="W103"
                Content="16-W103"
                Click="DeskToggle_Click"
                Margin="10"/>
            <ToggleButton 
                x:Name="W104"
                Content="16-W104"
                Click="DeskToggle_Click"
                Margin="10"/>
            <ToggleButton 
                x:Name="W105"
                Content="16-W105"
                Click="DeskToggle_Click"
                Margin="10"/>
            <ToggleButton 
                x:Name="W106"
                Content="16-W106"
                Click="DeskToggle_Click"
                Margin="10"/>
            <ToggleButton 
                x:Name="W107"
                Content="16-W107"
                Click="DeskToggle_Click"
                Margin="10"/>
        </WrapPanel>
    </Grid>
</Page>
