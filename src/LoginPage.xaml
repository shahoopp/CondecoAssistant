<Page x:Class="CondecoAssistant.LoginPage"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     xmlns:local="clr-namespace:CondecoAssistant"
     Background="White">
   <Grid>
       <Button 
           Content="Back" 
           HorizontalAlignment="Left" 
           VerticalAlignment="Top" 
           Margin="10,10,10,0" 
           Width="75" 
           Height="30" 
           Click="BackButton_Click" />

       <StackPanel 
           VerticalAlignment="Top" 
           HorizontalAlignment="Center" 
           Margin="0,25,0,0" 
           Width="300">
           
           <TextBlock 
               Text="Username" 
               FontWeight="Bold" 
               Margin="0,0,0,5" />
           
           <TextBox 
               x:Name="UsernameBox" 
               Height="30" />
           
           <TextBlock 
               Text="Password" 
               FontWeight="Bold" 
               Margin="0,10,0,5" />
           
           <PasswordBox 
               x:Name="PasswordBox" 
               Height="30" />
           
           <Button 
               Content="Save" 
               Background="#009944" 
               Foreground="White"
               FontWeight="Bold" 
               FontSize="22" 
               Padding="10,5" 
               Width="100" 
               Height="35" 
               Cursor="Hand" 
               Margin="0,20,0,0" 
               Click="SaveButton_Click" />
       </StackPanel>
   </Grid>
</Page>
