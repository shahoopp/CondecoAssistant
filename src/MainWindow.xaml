<Window  
  x:Class="CondecoAssistant.MainWindow"  
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
  xmlns:local="clr-namespace:CondecoAssistant"  
  mc:Ignorable="d"  
  Title="EngageAssistant"  
  Height="650"  
  Width="900">  
  <Grid>  
      <!-- Header -->  
      <Border  
          x:Name="HeaderBar"  
          Background="#009944"  
          Height="140"  
          VerticalAlignment="Top">  
          <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">  
              <TextBlock  
                  x:Name="HeaderText"  
                  Text="Engage Assistant"  
                  Margin="0,0,0,0"  
                  Foreground="White"  
                  FontSize="60"  
                  FontWeight="Bold"  
                  HorizontalAlignment="Center" />  
              <TextBlock  
                  x:Name="AuthorText"  
                  Text="by Shaheer Lone"
                  Margin="0,0,0,0"
                  Foreground="White"  
                  FontWeight="Bold"  
                  FontSize="30"  
                  HorizontalAlignment="Center" />  
          </StackPanel>  
      </Border>  

      <!-- Frame to host navigated pages -->  
      <Frame  
          x:Name="MainFrame"  
          Margin="0,140,0,0"  
          NavigationUIVisibility="Hidden" />  
  </Grid>  
</Window>
