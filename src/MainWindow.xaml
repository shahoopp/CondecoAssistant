<Window x:Class="CondecoAssistant.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:CondecoAssistant"
    mc:Ignorable="d"
    Title="CondecoAssistant" Height="400" Width="600">
<Grid>
    <!-- Header -->
    <Border x:Name="HeaderBar" Background="#009944" Height="80" VerticalAlignment="Top">
        <TextBlock x:Name="HeaderText" Text="Condeco Assistant" Foreground="White" FontSize="60" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Border>

    <Frame x:Name="MainFrame" Margin="0,80,0,0" NavigationUIVisibility="Hidden" />

        <!-- StackPanel for main buttons -->
    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,100,0,0" Width="300">
        <!-- Login information button -->
        <DockPanel HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button x:Name="LoginButton" Content="Login" Background="#009944" Foreground="White"
                    FontWeight="Bold" FontSize="22" Padding="10,5" Width="150" Height="50" 
                    Cursor="Hand"/>
            <Button x:Name="InfoButton1" Content="i" Background="Transparent" Foreground="#585958"
                    FontSize="16" Width="30" Height="30" Margin="10,0,0,0" Cursor="Hand"/>
        </DockPanel>
        <TextBlock x:Name="LoginInfoText" Text="Enter your Condeco login credentials to be saved here (same as your laptop login)"
                   Visibility="Collapsed" Foreground="#585958" FontSize="14" Margin="0,0,0,15" TextWrapping="Wrap"/>

        <!-- Days button -->
        <DockPanel HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button x:Name="DaysButton" Content="Days" Background="#009944" Foreground="White"
                    FontWeight="Bold" FontSize="22" Padding="10,5" Width="150" Height="50" 
                    Cursor="Hand"/>
            <Button x:Name="InfoButton2" Content="i" Background="Transparent" Foreground="#585958"
                    FontSize="16" Width="30" Height="30" Margin="10,0,0,0" Cursor="Hand"/>
        </DockPanel>
        <TextBlock x:Name="DaysInfoText" Text="Select the days you wish to book your desks for."
                   Visibility="Collapsed" Foreground="#585958" FontSize="14" Margin="0,0,0,15" TextWrapping="Wrap"/>

        <!-- Desks button -->
        <DockPanel HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button x:Name="DesksButton" Content="Desks" Background="#009944" Foreground="White"
                    FontWeight="Bold" FontSize="22" Padding="10,5" Width="150" Height="50" 
                    Cursor="Hand"/>
            <Button x:Name="InfoButton3" Content="i" Background="Transparent" Foreground="#585958"
                    FontSize="16" Width="30" Height="30" Margin="10,0,0,0" Cursor="Hand"/>
        </DockPanel>
        <TextBlock x:Name="DesksInfoText" Text="Select the desks you wish to book."
                   Visibility="Collapsed" Foreground="#585958" FontSize="14" Margin="0,0,0,15" TextWrapping="Wrap"/>
        
    </StackPanel>
</Grid>
</Window>
